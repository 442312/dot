#Install
#Boot in EFI mode!

pacstrap base base-devel linux linux-firmmware networkmanager nano lvm2 grub efibootmgr

#After install

systemctl enable NetworkManager
systemctl start NetworkManager

nmtui (to connect to wi-fi)

useradd -m -G wheel k01
passwd k01
nano  /etc/sudoers
# uncomment wheel

sudo pacman -S reflector i3 dmenu geany rxvt-unicode xorg xorg-xinit mc ranger doublecmd-gtk2 firefox git syncthing libreoffice-still

