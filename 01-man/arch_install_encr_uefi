#Install
#Boot in EFI mode!

pacstrap base base-devel linux linux-firmmware networkmanager nano lvm2 grub efibootmgr

#After install

systemctl enable NetworkManager
systemctl start NetworkManager

nmtui (to connect to wi-fi)
firmmware
useradd -m -G wheel k01
passwd k01
nano  /etc/sudoers
# uncomment wheel

sudo pacman -S reflector i3 dmenu geany rxvt-unicode xorg xorg-xinit mc ranger doublecmd-gtk2 firefox git syncthing libreoffice-still xf86-video-intel pulseaudio pulseaudio-alsa alsa-utils

sudo geany /usr/share/X11/xorg.conf.d/40-libinput.conf
#Paste
Option "Tapping" "on"
#in touchpad section
#Reboot

#Enable hibernation
sudo blkid | grep swap

#Output:
dev/mapper/runtu--vg-swap_1: UUID="$swap_uuid" TYPE="swap"

sudo geany /etc/default/grub

#Paste 
resume=UUID=$swap_uuid 
#to line GRUB_CMDLINE_LINUX_DEFAULT="quiet splash" to make it look like this
GRUB_CMDLINE_LINUX_DEFAULT="quiet splash resume=UUID=$swap_uuid"

sudo grub-mkconfig -o /boot/grub/grub.cfg

sudo geany /etc/mkinitcrio.conf

#Paste 
resume 
#in HOOKS section after lvm2

sudo mkinitcpio -p linux

#Test hibernation



